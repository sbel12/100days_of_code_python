# second take

print('Welcome to Python Pizza Deliveries')
pizza=input('Do you want to order pizza. Y or N: ')
bill=0
if pizza=='Y':
    size=input('What size pizza do you want: S, M or L: ')
    pepperoni=input('Do you want pepperoni on your pizza? Y or N: ')
    extra_cheese=input('Do you want extra cheese? Y or N: ')
    
    if size=="S":
        bill +=15
        if pepperoni=='Y':
            bill +=2
    elif size=='M':
        bill +=20
        if pepperoni=='Y':
            bill +=3
    elif size=='L':
        bill +=25
        if pepperoni=='Y':
            bill +=3
    else:
        print('wrong size')
    if extra_cheese=='Y':
        bill +=1

print(f'Your bill till now $ {bill}')
    
