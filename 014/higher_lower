import random
ver1=[]
ver2=[]
score=0
cont_game=True

def random_comp():
    """this function outpus random choices of two celebreties for compariosn """
    global ver1, ver2
    ver1=random.choice(data)
    #print(ver1)
    ver2=random.choice(data)
    #print(ver2)
    if ver1==ver2:
       ver2=random.choice(data)
       #print(ver2)
    else:
