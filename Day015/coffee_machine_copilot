Spyder Editor

This is a temporary script file.
"""


# Coffee Machine Program

resources = {
    "water":300,
    "milk": 300,
    "coffee": 100,
    "money": 5
}

menu = {
        "espresso": {
        "ingredients": {"water": 50, "coffee": 18},
        "cost": 1.5
        },
        "latte": {
        "ingredients": {"water": 200, "milk": 150, "coffee": 24},
        "cost": 2.5
        },
       "cappuchino": {
           "ingredients": {"water": 200, "milk": 100, "coffee": 24},
           "cost": 3.0
           }
}

def print_resources():
    print(f"Water: {resources['water']} ml")
    print(f"Milk: {resources['milk']} ml")
    print(f"Coffee: {resources['coffee']} g")
    print(f"Money: ${resources['money']:.2f}")

def get_user_choice():
    print("\nMenu:")
    print(f"{drink.capitalize()}: ${menu[drink]['cost']}")
    choice = input("\nWhat would you like? (espresso/latte/cappuchino): ").lower()
    return choice

def check_resources(drink):
    for item in menu[drink]['ingredients']:
        if menu[drink]['ingredients'][item] > resources[item]:
            print(f"Sorry, there is not enough {item}.")
            return False
    return True

def process_coins():
    print("Please insert coins.")
    quarters = int(input("How many quarters? "))    # 0.25
    dimes = int(input("How many dimes? "))          # 0.10
    nickels = int(input("How many nickels? "))      # 0.05
    pennies = int(input("How many pennies? "))      # 0.01
    total = 0.25 * quarters + 0.10 * dimes + 0.05 * nickels + 0.01 * pennies
    print(f"You inserted: ${total:.2f}")
    return total

def handle_transaction(drink, payment):
    cost = menu[drink]['cost']
    if payment < cost:
        print("Sorry, that's not enough money. Money refunded.")
        return False
    change = payment - cost
    if change > 0:
        print(f"Here is your change: ${change:.2f}")
    for item in menu[drink]['ingredients']:
        resources[item] -= menu[drink]['ingredients'][item]
    resources['money'] += cost
    print(f"Here is your {drink}. Enjoy! â˜•")
    return True

# Main loop
machine_on = True

while machine_on:
    choice = get_user_choice()

    if choice == "off":
        print("Turning off the coffee machine. Goodbye!")
        machine_on = False

    elif choice == "report":
        print_resources()

    elif choice in menu:
        if not check_resources(choice):
            continue
        payment = process_coins()
        handle_transaction(choice, payment)

    else:
        print("Invalid input. Please choose from espresso, latte, or cappuchino.")


